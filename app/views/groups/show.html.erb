<!-- app/views/groups/show.html.erb -->
<div class="container">
  <h1>Group Detail</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Introduction</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= image_tag @group.image, size:'100x100' if @group.image.attached? %></td>
        <td> <%= link_to @group.name,group_path(@group), method: :get, class: "" %></td>
        <td><%= @group.introduction %></td>
         <td><%= @group.group_users.count %>äºº</td>
        <% if @group.owner_id == current_user.id %>
          <td>
            <%= link_to "Edit", edit_group_path(@group), class: "btn btn-primary" %>
          </td>
        <% else %>
        <td>
           <%= link_to "Join Group", group_user_join_path(@group, current_user), method: :post, class: "btn btn-primary" %>
        </td>
        <% end %>
        <td>
           <%= link_to "Notice", notifications_new_path(id: @group.id), method: :get, class: "btn btn-primary" %>
        </td>
      </tr>
    </tbody>
  </table>
  <%= link_to "New Group", new_group_path, class: "btn btn-primary" %>
</div>
