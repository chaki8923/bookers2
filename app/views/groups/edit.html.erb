<!-- app/views/groups/new.html.erb -->

<h1>Update a New Group</h1>
<%= render 'layouts/errors', obj: @group %>
<%= form_with(model: @group, url: group_path(id: @group.id),method: 'patch', local: true, class: "p-3") do |form| %>
    <div class="form-group">
    <%= form.label :name, "Group Name" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :introduction, "Introduction" %>
    <%= form.text_area :introduction, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image, "Image" %>
    <%= form.file_field :image, class: "form-control-file" %>
  </div>

  <%= form.submit "UPDATE", class: "btn btn-primary" %>
<% end %>
