<%= render 'layouts/errors', obj: @book_comment %>
<%= form_with model:[@book, @book_comment],local:true do |f| %>
  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, class: 'form-control book_comment' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
